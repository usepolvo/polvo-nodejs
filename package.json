{
  "name": "@usepolvo/core",
  "version": "0.0.1",
  "type": "module",
  "description": "Production-ready HTTP client with OAuth2, rate limiting, and retries built-in",
  "keywords": [
    "http",
    "client",
    "oauth2",
    "api",
    "fetch",
    "retry",
    "rate-limit"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth/index.js",
      "types": "./dist/auth/index.d.ts"
    },
    "./storage": {
      "import": "./dist/storage/index.js",
      "types": "./dist/storage/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --test test/**/*.test.js",
    "lint": "eslint src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "author": "Polvo Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/usepolvo/polvo-nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/usepolvo/polvo-nodejs/issues"
  },
  "homepage": "https://docs.usepolvo.com",
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  }
}
