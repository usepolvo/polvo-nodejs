{
  "name": "polvo",
  "private": true,
  "type": "module",
  "description": "Integration connector toolkit with OAuth2, typed clients, and webhook utilities",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "lint": "eslint packages/*/src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@anolilab/semantic-release-pnpm": "^3.1.0",
    "@eslint/js": "^9.39.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "semantic-release": "^25.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "author": "Polvo Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/usepolvo/polvo-nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/usepolvo/polvo-nodejs/issues"
  },
  "homepage": "https://docs.usepolvo.com",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  }
}
