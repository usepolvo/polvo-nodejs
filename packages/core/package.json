{
  "name": "@usepolvo/core",
  "version": "0.0.3",
  "type": "module",
  "description": "Lightweight HTTP client with retries and simple auth handlers",
  "keywords": [
    "http",
    "client",
    "api",
    "fetch",
    "retry"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./auth": {
      "import": "./dist/auth/index.js",
      "types": "./dist/auth/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Polvo Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/usepolvo/polvo-nodejs.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  }
}
